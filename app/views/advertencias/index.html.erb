<p id="notice"><%= notice %></p>

<h1>Advertencias</h1>

<table>
  <thead>
    <tr>
      <th>Data</th>
      <th>Descricao</th>
      <th>Membro</th>
    </tr>
  </thead>

  <tbody>
    <% @advertencias.each do |advertencia| %>
      <tr>
        <td><%= advertencia.advdata %></td>
        <td><%= advertencia.reason %></td>
        <td><%= advertencia.membro.name%></td>
  
    <td>
      <%= link_to 'Mostrar', action: 'show', id: advertencia %>
    </td>

  <% if admin_signed_in? %>
    
    <td>
      <%= link_to 'Deletar', {action: 'destroy', id: advertencia},
                         {method: "delete"}  %>
    </td>

    <td>
      <%= link_to 'Editar', action: 'edit', id: advertencia%>
    </td>

  <% end %>
       </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Voltar", :controller => :membros, :action => :index %>
<td>

<%= paginate @advertencias %>
</td>


<% if admin_signed_in? %>
  <td>
      <%= link_to 'Nova advertencia', action: 'new'%>
  </td>
<% end %>
